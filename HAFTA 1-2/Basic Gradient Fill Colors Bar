#Normal imports
import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
#Gradient Color Bar Plots
from matplotlib import cm
from matplotlib.colors import ListedColormap, LinearSegmentedColormap
from matplotlib import colors as mcolors, path

#Some dummy data for us to plot
df = pd.DataFrame({'a':[1,2,3,4,5,6], 'b':[4,5,6,3,7,1]})

fig, ax = plt.subplots()

def gradientbars(bars):
    # set up the gradient for the cmap
    grad = np.atleast_2d(np.linspace(0,1,256)).T
    # reestablish the plot area
    ax = bars[0].axes
    lim = ax.get_xlim()+ax.get_ylim()
    ax.axis(lim)
    # color each bar
    for bar in bars:
        bar.set_facecolor("none")
        x,y = bar.get_xy()
        w, h = bar.get_width(), bar.get_height()
        ax.imshow(grad, extent=[x,x+w,y,y+h], aspect="auto")

gradientbars(ax.bar(df.a, df.b))

plt.show()
